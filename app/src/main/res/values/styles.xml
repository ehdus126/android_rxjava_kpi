<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CommonCollapsedToolbar" >
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/c_de000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommonToolbarH48">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:contentInsetRight">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="layout_collapseMode">pin</item>
        <item name="popupTheme">@style/Renewal.AppTheme.PopupOverlay</item>
    </style>

    <style name="Renewal.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>